{
    "extends": "./api/node_modules/adonis-preset-ts/tsconfig.json",
    "include": [
      "./api/**/*"
    ],
    "exclude": [
      "node_modules",
      "build"
    ],
    "compilerOptions": {
      "outDir": "build",
      "rootDir": "./api/",
      "sourceMap": true,
      "paths": {
        "App/*": [
          "./api/app/*"
        ],
        "Config/*": [
          "./api/config/*"
        ],
        "Contracts/*": [
          "./api/contracts/*"
        ],
        "Database/*": [
          "./api/database/*"
        ]
      },
      "types": [
        "@adonisjs/core",
        "@adonisjs/repl",
        "@japa/preset-adonis/build/adonis-typings",
        "@adonisjs/lucid"
      ]
    }
  }
  